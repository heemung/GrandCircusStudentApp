
@{
    ViewBag.Title = "EditStudent";
}

<h2>EditStudent</h2>

<form action="/Home/EditStudentForm" method="post">

    <input type="hidden" name="ID" value="@ViewBag.ThisStudent.ID" />
    <label class="control-label">First Name</label><input type="text" name="fName" value="@ViewBag.ThisStudent.fName" placeholder="@ViewBag.ThisStudent.fName" class="form-control" />
    <br />
    <label class="control-label">Last Name</label><input type="text" name="lName" value="@ViewBag.ThisStudent.lName" placeholder="@ViewBag.ThisStudent.lName" class="form-control" />
    <br />
    <label class="control-label">Phone Number</label><input type="text" name="phoneNumber" value="@ViewBag.ThisStudent.phoneNumber" placeholder="@ViewBag.ThisStudent.phoneNumber" class="form-control" />
    <br />
    <label class="control-label">Address</label><input type="text" name="address" value="@ViewBag.ThisStudent.address" placeholder="@ViewBag.ThisStudent.address" class="form-control" />
    <br />
    <input type="submit" value="Save" />

</form>