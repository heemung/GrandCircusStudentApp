
@{
    ViewBag.Title = "ListCourses";
}

<h2>All Courses</h2>

<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>ID</th>
        <th>Course</th>
        <th>Category</th>
        <th>Actions</th>
    </tr>

    @foreach (dynamic c in ViewBag.AllCourses)
    {
        <tr>
            <td>@c.ID</td>
            <td>@c.Name</td>
            <td>@c.Category</td>
            <td>
                <a href="/Home/DeleteCourse?ID=@c.ID" onclick="return confirm('Are you sure you want to delete this course?')" class="btn-danger btn-sm" name="delete">Delete</a>
                <a href="/Home/EditCourse?ID=@c.ID"  class="btn-default btn-sm" name="edit">Edit</a>
            </td>
        </tr>
    }
</table>
<a href="/Home/AddCourse">Add A Course</a>

